<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <ImageView
        android:id="@+id/new_notification_indicator"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/online_dot"
        app:layout_constraintTop_toTopOf="@id/invite_text"
        app:layout_constraintBottom_toBottomOf="@id/invite_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/invite_text"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/invite_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montesserat_medium"
        android:text="Попутчик Ivan Ivanov приглашает Вас ездить вместе"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/new_notification_indicator"
        app:layout_constraintEnd_toStartOf="@id/timestamp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 дек 2022"
        android:maxWidth="70dp"
        android:fontFamily="@font/montesserat_medium"
        android:textSize="13sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/invite_text"
        app:layout_constraintBottom_toBottomOf="@id/invite_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>