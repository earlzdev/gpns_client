<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backrgound_image_2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/user_avatar"
            app:layout_constraintBottom_toBottomOf="@id/user_avatar"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/user_avatar"
            android:layout_width="65dp"
            android:layout_height="65dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/back_btn"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/default_avatar"
            android:scaleType="centerCrop"
            app:riv_oval="true"
            />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/example_user_name"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@id/user_avatar"
            app:layout_constraintBottom_toTopOf="@id/companion_role"
            app:layout_constraintStart_toEndOf="@id/user_avatar"
            android:layout_marginStart="15dp"
            />

        <TextView
            android:id="@+id/companion_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dirver_role"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/user_name"
            app:layout_constraintBottom_toBottomOf="@id/user_avatar"
            app:layout_constraintStart_toStartOf="@id/user_name"
            />

        <ImageView
            android:id="@+id/driver_role_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/driver_icon"
            app:layout_constraintTop_toTopOf="@id/companion_role"
            app:layout_constraintBottom_toBottomOf="@id/companion_role"
            app:layout_constraintStart_toEndOf="@id/companion_role"
            android:layout_marginStart="8dp"
            />

        <TextView
            android:id="@+id/driver_leave_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/driver_leave_from"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/user_avatar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            />

        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/companion_values_max_width"
            android:text="ост. Льва Толстого"
            android:fontFamily="@font/montesserat_medium"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/driver_leave_from"
            app:layout_constraintBottom_toBottomOf="@id/driver_leave_from"
            app:layout_constraintStart_toStartOf="@id/able_to_catch_comp_from"
            />

        <TextView
            android:id="@+id/driver_able_to_catch_comp_from"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/driver_able_to_catch_comp_form"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/able_to_catch_comp_from"
            app:layout_constraintStart_toStartOf="@id/driver_leave_from"
            />

        <TextView
            android:id="@+id/able_to_catch_comp_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/companion_values_max_width"
            android:text="ост.Мира"
            android:fontFamily="@font/montesserat_medium"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/from"
            app:layout_constraintStart_toEndOf="@id/driver_able_to_catch_comp_from"
            android:layout_marginStart="@dimen/margin_start_companions"
            android:layout_marginTop="@dimen/margin1"
            />

        <TextView
            android:id="@+id/driver_goes_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/driver_goues_to"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/goes_to"
            app:layout_constraintBottom_toBottomOf="@id/goes_to"
            app:layout_constraintStart_toStartOf="@id/driver_leave_from"
            />

        <TextView
            android:id="@+id/goes_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="@dimen/companion_values_max_width"
            android:text="Проходная №10"
            android:fontFamily="@font/montesserat_medium"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/able_to_catch_comp_from"
            app:layout_constraintBottom_toTopOf="@id/also_able_to_visit"
            app:layout_constraintStart_toStartOf="@id/able_to_catch_comp_from"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/driver_also_can_visit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/driver_able_to_visit_also"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/also_able_to_visit"
            app:layout_constraintStart_toStartOf="@id/driver_leave_from"
            />

        <TextView
            android:id="@+id/also_able_to_visit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="@dimen/companion_values_max_width"
            android:text="Проходная №4"
            android:fontFamily="@font/montesserat_medium"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/goes_to"
            app:layout_constraintBottom_toTopOf="@id/schedule"
            app:layout_constraintStart_toStartOf="@id/able_to_catch_comp_from"
            android:layout_marginTop="@dimen/margin1"
            />

        <TextView
            android:id="@+id/driver_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/schedule"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/schedule"
            app:layout_constraintStart_toStartOf="@id/driver_leave_from"
            />

        <TextView
            android:id="@+id/schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="@dimen/companion_values_max_width"
            android:text="Дневной 8:30 - 17:30"
            android:fontFamily="@font/montesserat_medium"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/also_able_to_visit"
            app:layout_constraintBottom_toTopOf="@id/can_drive_in_turn"
            app:layout_constraintStart_toStartOf="@id/able_to_catch_comp_from"
            android:layout_marginTop="@dimen/margin1"
            />

        <TextView
            android:id="@+id/driver_can_drive_in_turn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/driver_able_to_drive_in_turn"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/can_drive_in_turn"
            app:layout_constraintStart_toStartOf="@id/driver_leave_from"
            />

        <TextView
            android:id="@+id/can_drive_in_turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Да"
            android:fontFamily="@font/montesserat_medium"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/schedule"
            app:layout_constraintStart_toStartOf="@id/able_to_catch_comp_from"
            android:layout_marginTop="@dimen/margin1"
            />

        <TextView
            android:id="@+id/driver_trip_time"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/drives_in_trip_in_time"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/driver_can_drive_in_turn"
            app:layout_constraintStart_toStartOf="@id/driver_leave_from"
            android:layout_marginTop="@dimen/margin1"
            />

        <TextView
            android:id="@+id/trip_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Постоянно"
            android:fontFamily="@font/montesserat_medium"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/driver_trip_time"
            app:layout_constraintStart_toStartOf="@id/able_to_catch_comp_from"
            />

        <View
            android:id="@+id/separate_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_tab_unselected"
            app:layout_constraintTop_toBottomOf="@id/driver_trip_time"
            app:layout_constraintBottom_toTopOf="@id/driver_car_places_avaliable"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/driver_car_places_avaliable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/driver_car_avaliable_places"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/driver_trip_time"
            app:layout_constraintStart_toStartOf="@id/driver_leave_from"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/avaliable_places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:fontFamily="@font/montesserat_medium"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/driver_car_places_avaliable"
            app:layout_constraintBottom_toBottomOf="@id/driver_car_places_avaliable"
            app:layout_constraintStart_toStartOf="@id/able_to_catch_comp_from"
            />

        <TextView
            android:id="@+id/driver_trip_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/driver_trip_price"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/driver_car_places_avaliable"
            app:layout_constraintStart_toStartOf="@id/driver_leave_from"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/trip_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="150dp"
            android:text="По договоренности"
            android:fontFamily="@font/montesserat_medium"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/driver_trip_price"
            app:layout_constraintBottom_toBottomOf="@id/driver_trip_price"
            app:layout_constraintStart_toStartOf="@id/able_to_catch_comp_from"
            />

        <TextView
            android:id="@+id/driver_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/driver_comment"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/driver_trip_price"
            app:layout_constraintStart_toStartOf="@id/driver_leave_from"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Синяя гранта"
            android:fontFamily="@font/montesserat_medium"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/driver_comment"
            app:layout_constraintStart_toStartOf="@id/driver_leave_from"
            android:layout_marginTop="10dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seggust_drive_together"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="@string/suggest_to_drive_together"
            android:fontFamily="@font/montesserat_medium"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/comment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/search_btn_background"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deny"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="@string/deny"
            android:fontFamily="@font/montesserat_medium"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/search_btn_background"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/seggust_drive_together"
            android:layout_marginBottom="40dp"
            android:visibility="gone"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/delete_form"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="@string/delete_trip_form"
            android:fontFamily="@font/montesserat_medium"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/remove_comp_from_group_button_background"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/comment"
            android:visibility="gone"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>