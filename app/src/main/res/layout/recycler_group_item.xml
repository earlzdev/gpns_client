<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    android:layout_marginVertical="5dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/chat_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/default_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerCrop"
        app:riv_oval="true"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_chat"
        android:fontFamily="@font/montesserat_medium"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/chat_image"
        app:layout_constraintStart_toEndOf="@id/chat_image"
        app:layout_constraintBottom_toTopOf="@id/chat_last_msg"
        android:layout_marginStart="15dp"
        />

    <ImageView
        android:id="@+id/main_chat_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/main_chat_indicator"
        app:layout_constraintStart_toEndOf="@id/chat_name"
        app:layout_constraintTop_toTopOf="@id/chat_name"
        app:layout_constraintBottom_toBottomOf="@id/chat_name"
        android:layout_marginStart="5dp"
        />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/last_msg_author_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/chat_last_msg"
        app:layout_constraintBottom_toBottomOf="@id/chat_last_msg"
        app:layout_constraintStart_toStartOf="@id/chat_name"
        app:layout_constraintEnd_toStartOf="@id/last_msg_author"
        android:layout_marginEnd="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_avatar"
        app:riv_oval="true"
        />

    <TextView
        android:id="@+id/last_msg_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_tab_unselected"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/message_author_in_group"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/chat_last_msg"
        app:layout_constraintBottom_toBottomOf="@id/chat_last_msg"
        app:layout_constraintStart_toEndOf="@id/last_msg_author_image"
        app:layout_constraintEnd_toStartOf="@id/chat_last_msg"
        android:layout_marginEnd="5dp"
        android:paddingEnd="5dp"
        />

    <TextView
        android:id="@+id/chat_last_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/last_msg_in_chat"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/grey_tab_unselected"
        android:maxWidth="@dimen/max_group_message_width"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/chat_name"
        app:layout_constraintStart_toEndOf="@id/last_msg_author"
        app:layout_constraintBottom_toBottomOf="@id/chat_image"
        android:layout_marginEnd="20dp"
        />

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_22_15"
        android:textColor="@color/grey_tab_unselected"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/chat_name"
        android:layout_marginEnd="20dp"
        />

    <TextView
        android:id="@+id/unreadMsgCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/example_of_unread_msg_in_room"
        android:textColor="@color/grey_tab_unselected"
        android:background="@drawable/unred_msg_in_room_background"
        app:layout_constraintTop_toBottomOf="@id/timestamp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        android:layout_marginEnd="20dp"
        />

    <ImageView
        android:id="@+id/last_message_read_indicator"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/msg_read_in_room"
        app:layout_constraintTop_toBottomOf="@id/timestamp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/timestamp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/last_message_unread_indicator"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/msg_unread_indicator"
        app:layout_constraintTop_toBottomOf="@id/timestamp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/timestamp"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>